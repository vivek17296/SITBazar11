<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/p3"
    tools:context="com.example.pranay.sitbazar.HomePageActivity">

    <Button
        android:text="SELL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/sell"
        android:textColor="#000000"
        android:background="#0000"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/logOutBtn"
        android:layout_alignStart="@+id/logOutBtn" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#0000"
        android:layout_marginTop="78dp"
        android:id="@+id/logOutBtn"
        android:layout_below="@+id/purchase"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="PURCHASE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:textColor="#000000"
        android:background="#0000"
        android:id="@+id/purchase"
        android:textSize="20sp"
        android:layout_below="@+id/sell"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />
</RelativeLayout>
