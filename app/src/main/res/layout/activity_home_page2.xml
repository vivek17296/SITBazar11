<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/p4"
    tools:context="com.example.pranay.sitbazar.HomePageActivity2">


    <TextView
        android:text="Book Name :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:id="@+id/bookname"
        android:textColor="#000000"/>

    <TextView
        android:text="Author :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booknamedes"
        android:layout_alignLeft="@+id/bookname"
        android:layout_alignStart="@+id/bookname"
        android:layout_marginTop="26dp"
        android:id="@+id/author"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/authordes"
        android:layout_alignBaseline="@+id/author"
        android:layout_alignBottom="@+id/author"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <TextView
        android:text="Edition :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authordes"
        android:layout_alignLeft="@+id/author"
        android:layout_alignStart="@+id/author"
        android:layout_marginTop="36dp"
        android:id="@+id/edition"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editiondes"
        android:layout_alignBaseline="@+id/edition"
        android:layout_alignBottom="@+id/edition"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <TextView
        android:text="Est. Price :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/estprice"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/edition"
        android:layout_alignStart="@+id/edition"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/estpricedes"
        android:layout_alignBaseline="@+id/estprice"
        android:layout_alignBottom="@+id/estprice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"/>

    <TextView
        android:text="Book Description :"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/estpricedes"
        android:layout_alignLeft="@+id/estprice"
        android:layout_alignStart="@+id/estprice"
        android:layout_marginTop="43dp"
        android:id="@+id/bookdescription"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/bookdescription"
        android:layout_alignLeft="@+id/bookdescription"
        android:layout_alignStart="@+id/bookdescription"
        android:layout_marginTop="20dp"
        android:id="@+id/bookdescriptiondes"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/booknamedes"
        android:layout_alignBaseline="@+id/bookname"
        android:layout_alignBottom="@+id/bookname"
        android:layout_alignLeft="@+id/authordes"
        android:layout_alignStart="@+id/authordes"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textColor="#000000"/>

    <Button
        android:text="NEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:textColor="#000000"
        android:background="#0000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bookname"
        android:layout_alignEnd="@+id/bookname"
        android:id="@+id/img" />

</RelativeLayout>
